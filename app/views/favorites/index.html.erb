<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.picture.user.name %></td>
        <td><%= favorite.picture.content %></td>
        <td><%= image_tag favorite.picture.image.url, style:'width:400px;height:240px' if favorite.picture.image_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Picture', new_picture_path %>
<%= link_to 'back', user_path(current_user.id) %>